type Users {
  id: ID! @id
  username: String! @unique
  reviews: [Review!]! @relation(name: "ReviewToUsers", onDelete: CASCADE)
}

type Review{
  id: ID! @id
  text: String!
  rating: Float!
  author: Users! @relation(name: "ReviewToUsers", onDelete: SET_NULL)
  book: Book! @relation(name: "BookToReview", onDelete: SET_NULL )
}

type Book{
  id:ID! @id
  title: String!
  author: String!
  isbn: String! @unique
  reviews: [Review!]! @relation(name: "BookToReview", onDelete: CASCADE)
}